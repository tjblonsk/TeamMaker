<h1>Listing firefighters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @firefighters.each do |firefighter| %>
  <tr>
    <td><%= firefighter.name %></td>
    <td><%= firefighter.age %></td>
    <td><%= link_to 'Show', firefighter %></td>
    <td><%= link_to 'Edit', edit_firefighter_path(firefighter) %></td>
    <td><%= link_to 'Destroy', firefighter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

